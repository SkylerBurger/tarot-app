<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
  <title>Table</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <main>
    <div class="table">
      <div class="position" id="position-1">
        <div class="card-border">
          <img src="img/cards/Back.jpg" class="card-image card-back">
          <img src="img/cards/Back.jpg" class="card-image" data-position="1">
        </div>
            <% if(type === 'standard') { %>
              <h2 id="position-1-label" class="label">Past</h2>
            <% } else if(type === 'custom') { %>
              <h2 id="position-1-label" class="label"><%= labels['position-1'] %></h2>
            <% } %>
      </div>

      <div class="position" id="position-2">
        <div class="card-border">
          <img src="img/cards/Back.jpg" class="card-image card-back">
          <img src="img/cards/Back.jpg" class="card-image" data-position="2">
        </div>
          <% if(type === 'standard') { %>
            <h2 id="position-2-label" class="label">Present</h2>
          <% } else if(type === 'custom') { %>
            <h2 id="position-2-label" class="label"><%= labels['position-2'] %></h2>
          <% } %>
      </div>

      <div class="position" id="position-3">
        <div class="card-border">
          <img src="img/cards/Back.jpg" class="card-image card-back">
          <img src="img/cards/Back.jpg" class="card-image" data-position="3">
        </div>
        <% if(type === 'standard') { %>
          <h2 id="position-3-label" class="label">Future</h2>
        <% } else if(type === 'custom') { %>
          <h2 id="position-3-label" class="label"><%= labels['position-3'] %></h2>
        <% } %>
      </div>
    </div>
    <div class="meanings">
      <!-- TODO: STUFF EVENTUALLY -->
    </div>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="js/deck.js"></script>
</body>
</html>